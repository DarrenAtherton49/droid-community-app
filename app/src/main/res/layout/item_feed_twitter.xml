<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="@color/feed_item_background_twitter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_horizontal"
            android:textColor="@color/material_text_primary"
            android:textSize="@dimen/material_text_title"
            android:text="TWITTER"
            android:layout_marginBottom="@dimen/material_keylines_8"/>

        <TextView
            android:id="@+id/author_when_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_horizontal"
            android:textColor="@color/material_text_secondary"
            android:textSize="@dimen/material_text_body1"
            android:layout_marginBottom="@dimen/material_keylines_4"/>

        <TextView
            android:id="@+id/num_comments_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_horizontal"
            android:textColor="@color/material_text_secondary"
            android:textSize="@dimen/material_text_body1"
            android:layout_marginBottom="@dimen/material_keylines_4"/>

        <TextView
            android:id="@+id/subreddit_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="@color/material_text_secondary"
            android:textSize="@dimen/material_text_body1"/>

    </LinearLayout>

</android.support.v7.widget.CardView>