<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/material_primary</item>
        <item name="colorPrimaryDark">@color/material_primary_dark</item>
        <item name="colorAccent">@color/material_accent</item>
        <item name="android:textColorPrimary">@color/material_text_primary</item>
        <item name="android:textColorSecondary">@color/material_text_secondary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MainTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="SubscriptionItemCard" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="SubscriptionItemMoreButton">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:background">@drawable/more_button_background</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

</resources>